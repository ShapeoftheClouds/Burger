<!-- Needs to be setup to have the template that handelbars can render onto -->
<!-- Create a button that will submit the user input into the database -->
<h1>Burgers!</h1>

<h2>Burgers to Eat!</h2>

<div class="container">
  <div class="row">

    <div class="col s6">
      {{#each burgers}}
      {{#unless this.devoured}}
    </div>

    <div id="allTheBurgers">
      {{this.burger_name}}

        <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
          <button type="submit" class="burgerToEat"> Eat this burger?</button>
        </form>

    </div>

    {{/unless}}
    {{/each}}

  </div>

  <div class="col s6">
    <h2>Devoured Burgers!</h2>

      <div id="devouredBurgers">
        {{#each burgers}}
          {{#if this.devoured}}

        <div>
          {{this.burger_name}}
        </div>

    </div>
      {{/if}}
      {{/each}}
    </div>

</div>


<h2>Add a Burger</h2>
<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Your Dream Burger">
      <button type="submit" class="addBurgerButton">Add The Burger</button>
    </form>
  </div>
</div>
